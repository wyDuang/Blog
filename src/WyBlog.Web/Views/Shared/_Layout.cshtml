@{
    var title = "无恙Duang的博客 | wyduang.com";
    if (ViewBag.Title != null)
    {
        title = ViewBag.Title + " | wyduang.com";
    }
}
<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@Html.Raw(title)</title>
    @if (!string.IsNullOrEmpty(ViewBag.Keyword))
    {
        <meta name="keywords" content="@Html.Raw(ViewBag.Keyword)" />
    }
    @if (!string.IsNullOrEmpty(ViewBag.Description))
    {
        <meta name="description" content="@Html.Raw(ViewBag.Description)" />
    }
    <environment include="Development">
        <link rel="stylesheet" href="~/libs/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/libs/layui/dist/css/layui.css">
        <link rel="stylesheet" href="~/css/gloable.css" asp-append-version="true" />
    </environment>
    @RenderSection("style", required: false)
</head>
<body>
    <partial name="_Header" />
    <div class="doc-container" id="doc-container">
        @RenderBody()
    </div>
    <partial name="_Footer" />
    <environment include="Development">
        <script src="~/libs/layui/dist/layui.js"></script>
        <script src="~/js/gloable.js" asp-append-version="true"></script>
        <script src="~/libs/nprogress/nprogress.js"></script>
    </environment>
    @RenderSection("scripts", required: false)
</body>
</html>
